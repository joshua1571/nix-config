      availableKernelModules =
        [ "nvme" "xhci_pci" "thunderbolt" "usb_storage" "sd_mod" ];
      kernelModules = [ ];
      luks.devices."luks-b399266a-052d-4cd8-a122-83e49940292f".device =
        "/dev/disk/by-uuid/b399266a-052d-4cd8-a122-83e49940292f";
