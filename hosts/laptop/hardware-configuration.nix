    kernelModules = [ "kvm-amd" ];
    extraModulePackages = [ ];
  };

  fileSystems = {
    "/" = {
      device = "/dev/disk/by-uuid/e3cdcb0e-d98c-4d75-b76b-141a8043c8f7";
      fsType = "ext4";
    };
    "/boot" = {
      device = "/dev/disk/by-uuid/FCD0-860D";
      fsType = "vfat";
      options = [ "fmask=0077" "dmask=0077" ];
    };
  };

  swapDevices = [ ];

